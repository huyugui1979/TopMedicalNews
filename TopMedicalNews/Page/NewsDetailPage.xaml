<?xml version="1.0" encoding="UTF-8"?>
<MyPage Title="" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:local="clr-namespace:TopMedicalNews;assembly=TopMedicalNews" xmlns:lc="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TopMedicalNews.NewsDetailPage">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical">
			<ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
				<StackLayout Orientation="Vertical">
					<Label TextColor="Black" Text="{Binding News.Title}" />
					<StackLayout Orientation="Horizontal">
						<Label Text="{Binding News.FromSource}" />
						<Label Text="{Binding News.PublishTime}" />
					</StackLayout>
					<lc:Separator Color="Gray" StrokeType="Dotted" />
					<Frame OutlineColor="Black" HasShadow="false">
						<Image Source="{Binding News.ImageUri}" />
					</Frame>
					<Label Text="{Binding News.Content}" />
					<local:NoScrollListView HasUnevenRows="true" x:Name="scroll" ItemsSource="{Binding Comments}">
						<local:NoScrollListView.ItemTemplate>
							<DataTemplate>
								<local:MyStackLayout />
							</DataTemplate>
						</local:NoScrollListView.ItemTemplate>
					</local:NoScrollListView>
				</StackLayout>
			</ScrollView>
			<StackLayout Orientation="Horizontal"  VerticalOptions="End" BackgroundColor="White" Padding="10,5,10,5">
				
				<local:MyEntry  Source="输入框_bg" Placeholder="我来说两句" HorizontalOptions="FillAndExpand"  /> 

				<Image HorizontalOptions="End" IsVisible="false">
					<Image.Source>
						<OnPlatform x:TypeArguments="ImageSource" iOS="收藏_btn_" Android="myreading.png" />
					</Image.Source>
				</Image>
				<Image HorizontalOptions="End" IsVisible="true">
					<Image.Source>
						<OnPlatform x:TypeArguments="ImageSource" iOS="收藏_pressed_btn" Android="myreading.png" />
					</Image.Source>
				</Image>
				<Image HorizontalOptions="End">
					<Image.Source>
						<OnPlatform x:TypeArguments="ImageSource" iOS="分享_btn" Android="myreading.png" />
					</Image.Source>
				</Image>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</MyPage>